<div class="container text-center">
  <h1>Check out our cities</h1>
  <div class="row">
    <% ['paris', 'berlin', 'amsterdam', 'tokyo', 'montreal', 'london'].each do |city| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),url('https://kitt.lewagon.com/placeholder/cities/<%= city %>')">
            <div class="card-content">
              <h3><%= city.capitalize %></h3>
              <a href="#" class="btn btn-primary">A cool place to go code</a>
            </div>
          </div>
      </div>
    <% end  %>
  </div>
</div>
